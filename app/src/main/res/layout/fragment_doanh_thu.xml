<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DoanhThuFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15sp"
        android:text="Doanh Thu Phòng Trọ"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:gravity="start"
        android:text="Bắt đầu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:paddingHorizontal="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_doanh_thu_namdb"
                android:layout_width="5sp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:layout_weight="0.3"
                android:background="@drawable/ic_baseline_calendar_today_24" />

            <EditText
                android:id="@+id/ed_doanh_thu_namBd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.7"
                android:background="@drawable/bg_white_conor_10_border_gary"
                android:hint="dd/mm/yyyy"
                android:padding="20sp"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:gravity="start"
        android:text="Kết thúc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:paddingHorizontal="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_doanh_thu_namKT"
                android:layout_width="5sp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:layout_weight="0.3"
                android:background="@drawable/ic_baseline_calendar_today_24" />

            <EditText
                android:id="@+id/ed_doanh_thu_namKT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.7"
                android:background="@drawable/bg_white_conor_10_border_gary"
                android:hint="dd/mm/yyyy"
                android:padding="20sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="start"
            android:text="Kết thúc" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_xemDTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/black"
        android:text="Xem" />
    <TextView
        android:textStyle="bold"
        android:textColor="#1169EC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doanh thu : "
        android:id="@+id/txtDoanhthu"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>
